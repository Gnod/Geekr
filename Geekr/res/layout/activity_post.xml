<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background" >

	<RelativeLayout 
	    android:id="@+id/layout_post_editor"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    >
	    <com.gnod.geekr.widget.ImageEditText 
	    android:id="@+id/view_post_edittext"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="40dp"
	    android:gravity="top"
	    android:scrollbars="vertical"
	    android:duplicateParentState="true"
	    />
		<RelativeLayout 
		    android:id="@+id/layout_post_editor_bottom"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:gravity="center_vertical"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:layout_alignParentBottom="true"
		    >
		     <LinearLayout 
			    android:id="@+id/layout_post_image"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:alpha=".9"
			    android:visibility="gone"
			    >
				<ImageView 
				    android:id="@+id/view_post_image"
				    android:layout_width="45dp"
				    android:layout_height="match_parent"
				    android:gravity="center_vertical"
				    android:layout_margin="1dp"
				    />
			</LinearLayout>
		    <LinearLayout 
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:orientation="horizontal"
		        >
			    <CheckBox
			        android:id="@+id/checkbox_retweet"
			        style="@style/CheckBoxAppTheme"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:text="同时转发"
			        android:textColor="#3B3B3B"
			        />
		    </LinearLayout>
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:orientation="horizontal"
			    >
			    <ImageView 
			        android:id="@+id/btn_post_location"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:background="@drawable/btn_location"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
					android:visibility="gone"
			        />
			    <ImageView 
			        android:id="@+id/btn_post_pic"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:background="@drawable/btn_pic"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
					android:visibility="gone"
			        />
			    
			    <ImageView 
			        android:id="@+id/btn_post_emotion"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:background="@drawable/btn_emotion"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
			        />
			    <ImageView 
			        android:id="@+id/btn_post_topic"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:background="@drawable/btn_topic"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
			        />
			    <ImageView 
			        android:id="@+id/btn_post_at"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:background="@drawable/btn_at"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
			        />
			</LinearLayout>		    
		</RelativeLayout>

		<TextView
		    android:id="@+id/btn_post_words_count"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_above="@id/layout_post_editor_bottom"
		    android:layout_alignParentRight="true"
		    android:gravity="center_vertical"
		    android:text="140"
		    android:textSize="12sp"
		    android:textColor="@android:color/white"
		    android:paddingRight="16dp"
		    android:layout_marginBottom="10dp"
		    android:layout_marginRight="10dp"
		    android:background="@drawable/btn_comment_del" />
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/layout_emotion"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:background="@color/color_grey"
	    android:visibility="gone"
	    >
		<GridView 
		    android:id="@+id/grid_emotion_thumb"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="10dp"
		    android:numColumns="6"
		    android:gravity="center"
		    >
		</GridView>
	</LinearLayout>
</LinearLayout>