<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff222222"
     >

    <ImageView
        android:id="@+id/view_login_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:src="@drawable/logo_1"
        />

    <Button
        android:id="@+id/btn_login_white"
        style="@style/down_radius_white_style"
        android:layout_width="fill_parent"
        android:layout_height="44.0dp"
        android:layout_marginLeft="48.0dp"
        android:layout_marginRight="48.0dp"
        android:layout_marginTop="8.0dp"
	    android:layout_marginBottom="72dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:text="微博"
        android:textColor="#ff222222"
        android:textSize="18.0sp"
         />
    <Button
        android:id="@+id/btn_login_black"
        style="@style/up_radius_black_style"
        android:layout_width="fill_parent"
        android:layout_height="44.0dp"
        android:layout_marginLeft="48.0dp"
        android:layout_marginRight="48.0dp"
        android:layout_above="@id/btn_login_white"
        android:background="@drawable/btn_black_selector"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/color_white"
        android:textSize="18.0sp" />
    
    <LinearLayout
        android:id="@+id/layout_login_loading"
        style="@style/up_radius_black_style"
        android:layout_width="fill_parent"
        android:layout_height="44.0dp"
        android:layout_marginLeft="48.0dp"
        android:layout_marginRight="48.0dp"
        android:layout_above="@id/btn_login_white"
        android:background="@drawable/btn_black_selector"
        android:gravity="center"
        android:textSize="18.0sp"
        android:visibility="gone" >
        <ProgressBar
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:indeterminateDrawable="@drawable/custom_progressbar" />
    </LinearLayout>
    
</RelativeLayout>